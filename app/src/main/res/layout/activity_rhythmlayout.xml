<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:HorizontalProgressBar ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <com.example.kevin_tian.kevin_ondraw1.KevinViewGroup
        android:layout_width="match_parent"
        android:id="@+id/rhythmlayout"
        android:layout_height="wrap_content"/>
    <com.example.kevin_tian.kevin_ondraw1.Rhythmlayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rhythmlayout1"/>
    <com.example.kevin_tian.kevin_ondraw1.HorizontalProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myProgressBar"
        HorizontalProgressBar:progress="70"
        HorizontalProgressBar:openAnimation="false"
        HorizontalProgressBar:max="100"
        HorizontalProgressBar:foregroundColor="#ff714b"
        HorizontalProgressBar:backgroundColor="#ff714b"/>


</LinearLayout>
