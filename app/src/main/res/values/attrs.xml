<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NumberProgressBar">
        <attr name="progress_current" format="integer"/>
        <attr name="progress_max" format="integer"/>

        <attr name="progress_unreached_color" format="color"/>
        <attr name="progress_reached_color" format="color"/>

        <attr name="progress_reached_bar_height" format="dimension"/>
        <attr name="progress_unreached_bar_height" format="dimension"/>

        <attr name="progress_text_size" format="dimension"/>
        <attr name="progress_text_color" format="color"/>

        <attr name="progress_text_offset" format="dimension"/>

        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="Themes">
        <attr name="numberProgressBarStyle" format="reference"/>
    </declare-styleable>
    <!-- CircleIndicator & CircleProgress -->
    <declare-styleable name="CircleView">
        <attr name="circle_divider_width" format="dimension" />
        <attr name="circle_normal_gray" format="color" />

        <attr name="circle_out_indicator_size" format="dimension" />

        <attr name="circle_title_size" format="dimension" />
        <attr name="circle_content_size" format="dimension" />
        <attr name="circle_unit_size" format="dimension" />
        <attr name="circle_alert_size" format="dimension" />

        <attr name="circle_center_out" format="dimension" />
        <attr name="circle_center_middle" format="dimension" />
        <attr name="circle_center_inside" format="dimension" />

        <attr name="circle_indicator_center" format="color" />
        <attr name="circle_indicator_light" format="color" />
        <attr name="circle_indicator_gray" format="color" />

        <attr name="circle_title" format="color" />
        <attr name="circle_content" format="color" />
        <attr name="circle_unit" format="color" />
        <attr name="circle_alert" format="color" />
    </declare-styleable>

    <!-- Line Indicator -->
    <declare-styleable name="LineIndicator">
        <attr name="lineAlertColor" format="color|reference" />
        <attr name="lineAlertSize" format="dimension" />
        <attr name="lineProgressBackground" format="color" />
        <attr name="lineProgressColor" format="color" />
        <attr name="lineIndicatorTextSize" format="dimension" />
        <attr name="lineIndicatorTextColor" format="color" />
        <attr name="lineIndicatorBackground" format="color" />
    </declare-styleable>
    <declare-styleable name="SimepleImageView">
        <attr name="src" format="integer"/>
    </declare-styleable>

</resources>